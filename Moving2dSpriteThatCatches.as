package com{		import com.Moving2dObject;	import com.InitialVelocity;//INITIAL VELOCITY class	import flash.utils.Timer;//for timer	import flash.display.*;	import flash.events.*;	import flash.text.TextField;		public class Moving2dSpriteThatCatches extends Moving2dObject{				private var catches:Number;		private var catchesFieldContainer:Sprite;		private var catchesField:TextField;		private var INITIALXFIELD:Number=3;		private var INITIALYFIELD:Number=0;			//timer, sprite, degree, velocity, gravity		public function Moving2dSpriteThatCatches(aTimer:Timer,obj:Sprite,d:Number=20, v:Number=40,g:Number=9.8):void{						catches=0;			catchesFieldContainer = new Sprite();			catchesField= new TextField();			catchesField.text = String(catches);			catchesFieldContainer.addChild(catchesField);			catchesFieldContainer.x=INITIALXFIELD;			catchesFieldContainer.y=INITIALYFIELD;			obj.addChild(catchesFieldContainer);						super(aTimer,obj,d, v, g);					}				//accessor set methods				//- number reduces catches		//addToCatches(1) add 1 catch		//addToCatches(-1) reduce by 1 catch		public function addToCatches(num:Number):void{			catches+= num;			formatCatches();		}		private function formatCatches():void{			if(catches < 0){catches = 0;}//no negative total catches			catchesField.text = String(catches);		}				//accessor get method		public function totalCatches():Number{			return catches;		}	}		}