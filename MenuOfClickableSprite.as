//display note picking menu itemspackage com{	import com.ClickableSprite;	import flash.display.*;	import flash.events.*;	public class MenuOfClickableSprite extends Sprite{				private var currentSelected:uint=0; //index of item selected		private var menu_container:Sprite= new Sprite();		private var numberMenuItems:Number;				public function MenuOfClickableSprite(clickableSpriteArry:Array):void{						numberMenuItems= clickableSpriteArry.length;			var i:Number = 0;						//draw menu			for(i = 0; i< numberMenuItems; i++){				menu_container.addChildAt(clickableSpriteArry[i],i);				var temp = menu_container.getChildAt(i);								//add listener				temp.addEventListener(MouseEvent.CLICK,clickForNoteType);			}		}				//accessor setter		private function clickForNoteType(evt:MouseEvent):void{			trace("menu is working");			currentSelected = evt.currentTarget.menuTypeIndex();			resetAlphaProperty();		}		private function resetAlphaProperty():void{						var i:Number = 0;						//draw menu			for(i = 0; i< numberMenuItems; i++){				if(i != currentSelected){					var temp = menu_container.getChildAt(i);					temp.resetAlphaProperty();					}			}		}				//accessor get		public function currentItemSelected():uint{			return currentSelected;		}		public function menuContainer():Sprite		{	return menu_container;		}			}	}