package com{	import com.RotatingSprite;	import flash.display.Sprite;	import flash.events.MouseEvent;		public class ClickableRotatingSprite extends RotatingSprite{			public function ClickableRotatingSprite(obj:Sprite):void{			super(obj); //constructor of Rotating Sprite is called			var object = rotatingObj();			object.addEventListener(MouseEvent.CLICK, callToRotate);		}		private function callToRotate(event:MouseEvent):void{			rotateObject(nextRotationDeg());		}			}}