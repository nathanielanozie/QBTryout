package com{	import flash.display.Sprite;	import flash.events.MouseEvent;		public class RotatingSprite extends Sprite{				private var nextRotationDegrees:Number;//+ down		private var currentDegrees:Number;		private var rotatingObject:Sprite;				public function RotatingSprite(obj:Sprite):void{			nextRotationDegrees=45;	//default next rotation degrees			currentDegrees= 0;//default current degrees			rotatingObject= obj;			rotatingObject.rotation=currentDegrees;//rotation default		}				//accessor set methods		//sets next rotation amount not the current angle of rotatingObject		public function setNextRotationDegrees(deg:Number):void{			nextRotationDegrees=deg;		}		//+ down		protected function rotateObject(deg:Number):void{			rotatingObject.rotation+=deg;			currentDegrees+=deg; //current degrees has changed		}		//+ down		protected function rotateObjectAndStop(deg:Number):void{			rotatingObject.rotation=deg;			currentDegrees=deg; //current degrees has changed		}				//accessor get methods		public function currentDeg():Number{			return currentDegrees;		}		public function nextRotationDeg():Number{			return nextRotationDegrees;		}		protected function rotatingObj():Sprite{			return rotatingObject;		}	}}