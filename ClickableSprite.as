package com{		import flash.display.Sprite;	import flash.events.MouseEvent;	public class ClickableSprite extends Sprite{		private var object:Sprite;		private var numberProperty:Number; //velocity		private var menuType:uint;				//sprite, index number of a menu, velocity or some other number attribute		public function ClickableSprite(obj:Sprite, index:uint, n:Number=0):void{			object = obj;			numberProperty=n;			menuType=index;			setActiveListeners();			addChild(object);		}		private function setActiveListeners():void{			object.addEventListener(MouseEvent.CLICK,setAlphaProperty);		}		private function setAlphaProperty(event:MouseEvent):void{			object.alpha= 0.5;		}		public function resetAlphaProperty():void{			object.alpha= 1;		}		public function numberValue():Number{		return numberProperty;		}		public function menuTypeIndex():uint{			return menuType;		}	}}